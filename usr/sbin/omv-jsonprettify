import argparse
import sys
import json

def main():
	parser = argparse.ArgumentParser(description = "Convert JSON data to human-readable form.")
	parser.add_argument("file", help = "The JSON file to prettify. If not defined, stdin will be used.", nargs = "?")
	args = parser.parse_args()
	try:
		inFile = sys.stdin
		if args.file is not None:
			inFile = open(args.file)
		data = json.load(inFile)
		inFile.close()
	except:
		print("Unexpected error: %s" % sys.exc_info()[1])
		return False
	print(json.dumps(data, sort_keys = False, indent = 4))
	return True

if __name__ == "__main__":
	sys.exit(not main())
